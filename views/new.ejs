<% include partials/header %>

<div class="ui main text container segment">
	<h1 class="ui huge header"> Add Your pet to the database! </h1>
	<div class="ui divider"></div>
	<form action="/pets" method="POST" class="ui form">
	  <div class="field">
	    <label>Pet's Name</label>
	    <input type="text" name="pet[name]" placeholder="Name">
	  </div>
	  <div class="field">
	    <label>Breed</label>
	    <input type="text" name="pet[breed]" placeholder="Breed">
	  </div>
	  <div class="field">
	    <label>Location</label>
	    <input type="text" name="pet[location]" placeholder="Location">
	  </div>
	  <div class="field">
	    <label>Age</label>
	    <input type="text" name="pet[age]" placeholder="Pet's Age">
	  </div>
	  <div class="field">
	    <label>Image</label>
	    <input type="text" name="pet[image]" placeholder="Pet's Picture">
	  </div>
	  <button class="ui green basic button" type="submit">Submit</button>
	</form>
</div>

<% include partials/footer %>